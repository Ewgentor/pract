<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <p class="mb-0">Таблица студентов</p>
                <form method="GET" action="/students" class="card-body d-flex gap-2">
                    <input class=" form-control" placeholder="Поиск по ФИО..." type="text" name="search" id="search" value="{{search}}">
                    <button type="submit" class="btn btn-secondary">
                        Найти
                    </button>
                    <select class=" form-select-sm border-secondary-subtle"  name="group" id="group" aria-label="">
                        <option class=" rounded" value="Все группы" {{#if (eq selectedGroup 'Все группы')}}selected{{/if}}>Все группы</option>
                        {{#each groups}}
                            <option value="{{this.group}}" {{#if (eq ../selectedGroup this.group)}}selected{{/if}}>{{this.group}}</option>
                        {{/each}}
                    </select>
                </form>
                <div class="card-body table-responsive pb-0">
                    <table class="table text-center table-bordered table-striped">  
                        <thead>
                            <tr>
                                <td>Группа</td>
                                <td>ФИО 
                                    <a href="{{sortUrl selectedGroup 'name' sortBy sortOrder}}" class="link-dark ms-2 text-decoration-none">
                                        <i class="bi 
                                        {{#if (eq sortBy 'name')}}
                                            {{#if (eq sortOrder 'asc')}}bi-sort-alpha-down
                                                {{else}}bi-sort-alpha-up-alt
                                            {{/if}}
                                            {{else}}bi-sort-alpha-down
                                        {{/if}}"></i>
                                    </a>
                                </td>
                                <td>Учебная</td>
                                <td>Научная</td>
                                <td>Творческая</td>
                                <td>Спорт</td>
                                <td>Общественная</td>
                                <td>Общий балл 
                                    <a href="{{sortUrl selectedGroup 'total_score' sortBy sortOrder}}" class="link-dark ms-2 text-decoration-none">
                                        <i class="bi 
                                        {{#if (eq sortBy 'total_score')}}
                                            {{#if (eq sortOrder 'asc')}}bi-sort-numeric-down
                                                {{else}}bi-sort-numeric-up-alt
                                            {{/if}}
                                            {{else}}bi-sort-numeric-down
                                        {{/if}}"></i>
                                    </a>
                                </td>
                                <td>Действия</td>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each students}}
                                <tr class=" align-self-center text-wrap">
                                    <td>{{this.group}}</td>
                                    <td>{{this.name}}</td>  
                                    <td>{{this.academic_score}}</td>
                                    <td>{{this.scientific_score}}</td>
                                    <td>{{this.creative_score}}</td>
                                    <td>{{this.sports_score}}</td>
                                    <td>{{this.social_score}}</td>
                                    <td>{{this.total_score}}</td>
                                    <td>
                                        <a href="/portfolio?id={{this.id}}" class="btn btn-outline-secondary border-0 py-0" title="Просмотреть портфолио студента">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button class="btn btn-outline-secondary border-0 delete-student py-0" data-id="{{this.id}}" title="Удалить студента">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="card-body py-0 text-secondary">
                    <p class="m-0">Показано {{students.length}} студентов из {{totalStudentsCount}}</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal добавления студента -->
<div class="modal fade" id="addStudentModal" tabindex="-1" aria-labelledby="addStudentLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addStudentLabel">Добавить нового студента</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addStudentForm">
                    <div class="mb-3">
                        <label for="studentName" class="form-label">ФИО студента</label>
                        <input placeholder="Например: Иванов Иван Иванович" type="text" class="form-control" id="studentName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="studentGroup" class="form-label">Группа</label>
                        <input placeholder="Например: ПИ-101" type="text" class="form-control" id="studentGroup" name="group" required>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="studentAStudent" name="a_student">
                        <label class="form-check-label" for="studentAStudent">
                            Отличник
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Отменить</button>
                <button type="button" class="btn btn-secondary" id="addStudentBtn">Добавить студента</button>
            </div>
        </div>
    </div>
</div>
