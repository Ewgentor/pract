<div class="row g-3 mb-4">
  <div class="col-12 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex flex-column justify-content-between">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Всего студентов</span>
          <i class="bi bi-people text-secondary"></i>
        </div>
        <h2 class="display-6 fw-semibold mb-0">{{stats.totalStudents}}</h2>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex flex-column justify-content-between">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Средний балл</span>
          <i class="bi bi-graph-up text-secondary"></i>
        </div>
        <h2 class="display-6 fw-semibold mb-0">{{stats.avgScore}}</h2>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex flex-column justify-content-between">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Групп</span>
          <i class="bi bi-collection text-secondary"></i>
        </div>
        <h2 class="display-6 fw-semibold mb-0">{{stats.groupsCount}}</h2>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex flex-column justify-content-between">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Макс. балл</span>
          <i class="bi bi-trophy text-secondary"></i>
        </div>
        <h2 class="display-6 fw-semibold mb-0">{{stats.maxScore}}</h2>
      </div>
    </div>
  </div>
</div>

<div class="row g-4 mb-4">
  <div class="col-12 col-xl-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body p-4">
        <h3 class="h5 mb-3">Топ-10 студентов по баллам</h3>
        <div class="table-responsive">
          <table class="table table-sm align-middle mb-0">
            <thead>
              <tr class="text-muted small">
                <th scope="col" style="width: 4rem;">#</th>
                <th scope="col">Студент</th>
                <th scope="col">Группа</th>
                <th scope="col" class="text-end">Баллы</th>
              </tr>
            </thead>
            <tbody>
              {{#if topStudents.length}}
                {{#each topStudents}}
                  <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.group}}</td>
                    <td class="text-end fw-semibold">{{this.total_score}}</td>
                  </tr>
                {{/each}}
              {{else}}
                <tr>
                  <td colspan="4" class="text-muted text-center py-4">
                    Нет данных для отображения рейтинга.
                  </td>
                </tr>
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="col-12 col-xl-6">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body p-4">
        <h3 class="h5 mb-3">Распределение баллов по категориям</h3>
        <div class="row g-3">
          {{#each categoryDistribution}}
            <div class="col-12 col-sm-6">
              <div class="d-flex align-items-center justify-content-between border rounded-3 px-3 py-2">
                <div>
                  <div class="fw-semibold">{{this.label}}</div>
                  <div class="text-muted small">{{this.percent}}% от общего числа баллов</div>
                </div>
                <span class="badge rounded-pill" style="background-color: {{this.color}};">
                  {{this.value}}
                </span>
              </div>
            </div>
          {{/each}}
          {{#unless categoryDistribution.length}}
            <div class="col-12 text-muted small">
              Нет данных для распределения по категориям.
            </div>
          {{/unless}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row g-4">
  <div class="col-12">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <h3 class="h5 mb-3">Распределение студентов по группам</h3>
        <div class="table-responsive">
          <table class="table table-sm align-middle mb-0">
            <thead>
              <tr class="text-muted small">
                <th scope="col">Группа</th>
                <th scope="col" class="text-center">Количество студентов</th>
                <th scope="col" class="text-end">Доля от общего числа</th>
              </tr>
            </thead>
            <tbody>
              {{#if groupsDistribution.length}}
                {{#each groupsDistribution}}
                  <tr>
                    <td class="fw-semibold">{{this.group}}</td>
                    <td class="text-center">{{this.count}}</td>
                    <td class="text-end">{{this.percent}}%</td>
                  </tr>
                {{/each}}
              {{else}}
                <tr>
                  <td colspan="3" class="text-muted text-center py-4">
                    Нет данных по группам.
                  </td>
                </tr>
              {{/if}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
